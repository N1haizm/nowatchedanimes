<%- include('../includes/head.ejs')%>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if(orders.length <=0){ %>
        <h2>There is nothing here yet!</h2>
        <% } else { %>
            <ul class="orders">
                <% orders.forEach(order => { %>
                    <li class="orders__item">
                        <h1>#<%= order._id %></h1>
                    </li>
                    <ul class="orders__animes">
                        <% order.items.forEach(anime => { %>
                            <li class="orders__animes-item"><%= anime.animeId.title %> (<%= anime.quantity %>)</li>
                        <% }) %>
                    </ul>
                <% }) %>
            </ul>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>