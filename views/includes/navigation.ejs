<div class="backdrop"></div>
<header class="main-header">
    <button id="side-menu-toggle">Menu</button>
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item">
                <a class="<%= path === '/' ? 'active' : '' %>" href="/">Market</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/animes' ? 'active' : '' %>" href="/animes">Products</a>
            </li>
            <% if(isAuthenticated){ %> 
            <li class="main-header__item">
                <a class="<%= path === '/deck' ? 'active' : '' %>" href="/deck">Deck</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders">Orders</a>
            </li>
                <li class="main-header__item">
                    <a class="<%= path === '/admin/add-anime' ? 'active' : '' %>" href="/admin/add-anime">Add anime</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/admin/animes' ? 'active' : '' %>" href="/admin/animes">Admin animes</a>
                </li>
            <% } %>
        </ul>
        <ul class="main-header__item-list">
            <% if(!isAuthenticated) { %>
                <li class="main-header__item">
                    <a class="<%= path === '/login' ? 'active' : '' %>"  href="/login">Login</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Signup</a>
                </li>
            <% } else { %>
                <li class="main-header__item">
                    <form action="/logout" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit">Logout</button>
                    </form>
                </li>
            <% } %>
        </ul>
    </nav>
</header>

